{
  "name": "3d-figures-shop",
  "version": "1.0.0",
  "description": "",
  "main": "src/main.ts",
  "scripts": {
    "remove": "rm -rf build",
    "remove:win": "rd /s /q build",
    "build": "tsc --build --force tsconfig.json",
    "start": "DEBUG=Application,Middleware DEBUG_COLORS=no node build/src/main.js",
    "copy": "cp -r ./src/views ./build/src && cp -r ./src/public ./build/src && npm run copy:bootstrap",
    "copy:bootstrap": "cp ./node_modules/bootstrap/dist/css/bootstrap.min.css ./build/src/public/style",
    "copy:win:bootstrap": "Xcopy ./node_modules/bootstrap/dist/css/bootstrap.min.css ./build/src/public/style",
    "copy:win": "Xcopy /E /I ./src/views ./build/src && Xcopy /E /I ./src/public ./build/src && npm run copy:win:bootstrap",
    "all": "clear && npm run remove && npm run build && npm run copy && npm run start",
    "all:win": "clear && npm run remove:win && npm run build && npm run copy:win && npm run start",
    "test": "mocha -r ts-node ./tests/*.ts",
    "test:builded": "mocha ./build/tests/*.js"
  },
  "keywords": [],
  "author": "Alexandr Kozorez",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "bootstrap": "^4.5.3",
    "debug": "^4.3.1",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.5",
    "express": "^4.17.1",
    "http": "0.0.1-security",
    "mongodb": "^3.6.3",
    "mongoose": "^5.10.3"
  },
  "devDependencies": {
    "typescript": "^4.1.3",
    "@types/chai": "^4.2.14",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.9",
    "@types/mocha": "^8.2.0",
    "@types/mongoose": "^5.10.3",
    "chai": "^4.2.0",
    "mocha": "^8.2.1",
    "ts-node": "^9.1.1"
  }
}
